@model IceCream.Models.Recipe
@{
    ViewBag.Title = "RecipeDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<!-- body -->
<body>
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-6">
                    <h1 class="section-title position-relative mb-5">@Model.Name</h1>
                </div>
                <div class="col-lg-6 mb-5 mb-lg-0 pb-5 pb-lg-0"></div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div id="ho_bo" class="our_products">
                        <div class="product">
                            <img src="@Model.Thumbnail" alt="Alternate Text" style="height: 400px" />
                        </div>
                        <b>Material: </b><br />
                        <p>@Html.Raw(Model.Materral)</p>
                        <b>Making: </b>
                        <p>@Html.Raw(Model.DetailStep)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

