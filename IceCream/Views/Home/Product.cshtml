
@{
    ViewBag.Title = "Product";
}
<style>
    .product-image {
        background-color: #cccccc;
        height: 250px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
        /*border: solid 1px #cccccc;*/
    }

        .product-image:hover {
            transform: scale(1.2);
        }

    .main-product {
        padding: 20px;
        background-color: white;
        border-radius: 5px;
        box-shadow: 0px 0px 5px 5px #e9e2e2;
        cursor: pointer;
    }
</style>
<main>
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-6">
                    <h1 class="section-title position-relative mb-5">Books</h1>
                </div>
                <div class="col-lg-6 mb-5 mb-lg-0 pb-5 pb-lg-0"></div>
            </div>
            <section class="text-center mb-4">

                <!--Grid row-->
                <div class="row wow fadeIn">

                    <!--Grid column-->
                    <!--Card-->
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card">

                                <!--Card image-->
                                <div class="view overlay">
                                    <div class="product-image" style="background-image: url(@item.Thumbnail)"></div>
                                    <a>
                                        <div class="mask rgba-white-slight"></div>
                                    </a>
                                </div>
                                <!--Card image-->
                                <!--Card content-->
                                <div class="card-body text-center">
                                    <!--Category & Title-->
                                    <h5>@item.Title</h5>
                                    <h4 class="font-weight-bold blue-text">
                                        <p>@item.Price $</p>
                                    </h4>
                                    <a href="@Url.Action("AddToCart", "Cart", new { @id = item.Id })" class="btn btn-sm btn-outline-primary">Add To Cart</a>
                                </div>
                                <!--Card content-->

                            </div>

                        </div>
                    }

                    <!--Card-->
                    <!--Grid column-->
                    <!--Grid column-->
                </div>
                <!--Grid row-->
            </section>
